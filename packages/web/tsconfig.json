{
  "extends": "./tsconfig.svelte.json",

  "include": ["src/**/*"],
  "exclude": ["node_modules/*", "public/*"],

  "compilerOptions": {
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "noImplicitAny": false,
    "strictNullChecks": false,
    "strict": false,
    "target": "es6",
    "lib": ["dom", "es2017"]
    // "allowJs": true,
    // "checkJs": true,
  }
}
